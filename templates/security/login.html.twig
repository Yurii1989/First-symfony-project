{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container" style="align-content: center; width: 50%;">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="card-header">
        <h1 class="h3 mb-3 font-weight-normal">{{ 'LOGIN.INFO'|trans }}</h1>
    </div>
    <div class="card-body">
        <form method="post">
        <label for="inputUsername" class="sr-only">{{ 'LOGIN.USERNAME'|trans }}</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">{{ 'LOGIN.PASSWORD'|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit" style="margin: 1rem;">
            {{ 'LOGIN.SUBMIT'|trans }}
        </button>
        </form>
    </div>
    </div>
{% endblock %}
